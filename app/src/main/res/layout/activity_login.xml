<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.blocktechwh.app.block.Activity.User.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="48dp"
        android:cropToPadding="false"
        app:srcCompat="@mipmap/logo" />

    <EditText
        android:id="@+id/id_edit_phone"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="账号/手机号码"
        android:inputType="phone"
        android:text=""
        android:textColorLink="@color/btnColor"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/id_edit_password"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="登录密码"
        android:inputType="textWebPassword"
        android:textColorLink="@color/btnColor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_text_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:autoLink="all"
        android:text="@string/forget"
        android:textSize="13sp" />

    <Button
        android:id="@+id/id_button_login"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/coners_bg"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/id_text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:autoLink="all"
        android:text="@string/newUser"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="用其他账号登录"
        android:textColorLink="@color/btnColor"
        android:textSize="@dimen/activity_text_size1"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00000000"
            android:paddingBottom="0dp"
            app:srcCompat="@mipmap/qq" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            app:srcCompat="@mipmap/weixin" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#00000000"
            app:srcCompat="@mipmap/xinlang" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="更多" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="-5dp"
            android:src="@mipmap/icon7" />
    </LinearLayout>

</LinearLayout>
