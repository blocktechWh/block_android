<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_show_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.00"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding_right"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:paddingStart="@dimen/padding_left">

                <com.blocktechwh.app.block.CustomView.ImageViewPlus
                    android:id="@+id/id_user_photo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/id_user_name"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/btnColor" />

                <Button
                    android:id="@+id/id_accept_btn"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/coners_bg2"
                    android:text="添加"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

        </LinearLayout>
</LinearLayout>