<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lo_gift_sure"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/id_sender_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="17.76dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/icon9"
            app:srcCompat="@mipmap/icon29" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="13"
                android:text="红包祝福"
                android:textColor="#787878" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_maker_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="发起人   许巍"
                android:textColor="#787878"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_create_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="发送时间   2010-10-10"
                android:textColor="#787878"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
