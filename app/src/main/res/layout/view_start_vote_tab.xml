<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="350dp"
            android:background="@drawable/lines_bg4"
            android:orientation="vertical"
            android:visibility="invisible"></LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_left"
            android:paddingStart="@dimen/padding_left">

            <TextView
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/lines_bg6"
                android:gravity="center_vertical|center_horizontal"
                android:text="1" />

            <LinearLayout
                android:id="@+id/ll_interval1"
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_gravity="right"
                android:background="@drawable/lines_bg6"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/btn_add_option"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/lines_bg6"
                android:gravity="center_vertical|center_horizontal"
                android:text="2" />

            <LinearLayout
                android:id="@+id/ll_interval2"
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_gravity="right"
                android:background="@drawable/lines_bg6"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/btn_select_voters"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/lines_bg6"
                android:gravity="center_vertical|center_horizontal"
                android:text="3"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_interval3"
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_gravity="right"
                android:background="@drawable/lines_bg6"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/btn_set_reward"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/lines_bg6"
                android:gravity="center_vertical|center_horizontal"
                android:text="4" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
