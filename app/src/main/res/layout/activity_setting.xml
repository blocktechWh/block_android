<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.User.SettingActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/titlebar_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left">

        <LinearLayout
            android:id="@+id/id_update_pwd"
            android:layout_width="match_parent"
            android:layout_height="54.72dp"
            android:background="@drawable/button_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="修改密码" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_show_versions"
            android:layout_width="match_parent"
            android:layout_height="54.72dp"
            android:background="@drawable/button_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="版本信息" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_update_button"
            android:layout_width="match_parent"
            android:layout_height="54.72dp"
            android:background="@drawable/button_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_update_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="更新资料" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_logout_button"
        android:layout_width="match_parent"
        android:layout_height="54.72dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingStart="@dimen/padding_left">

        <TextView
            android:id="@+id/id_logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="退出登录" />
    </LinearLayout>

</LinearLayout>
